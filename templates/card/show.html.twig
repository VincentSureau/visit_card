{% block title %}Card{% endblock %}

{% block body %}
    <h1>Card</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ card.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ card.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ card.lastname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ card.email }}</td>
            </tr>
            <tr>
                <th>PhoneNumber</th>
                <td>{{ card.phoneNumber }}</td>
            </tr>
            <tr>
                <th>Address1</th>
                <td>{{ card.address1 }}</td>
            </tr>
            <tr>
                <th>Address2</th>
                <td>{{ card.address2 }}</td>
            </tr>
            <tr>
                <th>PostCode</th>
                <td>{{ card.postCode }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ card.city }}</td>
            </tr>
            <tr>
                <th>Civility</th>
